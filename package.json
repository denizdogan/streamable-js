{
  "name": "streamable-js",
  "version": "0.0.2",
  "description": "A Node.js API for Streamable with Promises",
  "main": "dist/index.js",
  "scripts": {
    "compile": "babel -d dist src",
    "watch": "babel -w -d dist src",
    "uglify": "babel --minified --compact true --no-comments -d dist src",
    "dist": "npm run uglify",
    "lint": "standard src"
  },
  "author": "Deniz Dogan <deniz@dogan.se>",
  "license": "MIT",
  "dependencies": {
    "request-promise": "^2.0.0",
    "url-join": "0.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-preset-es2015": "^6.5.0",
    "standard": "^6.0.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/denizdogan/streamable-js.git"
  },
  "xo": {
    "esnext": true,
    "rules": {
      "linebreak-style": 0,
      "camelcase": 1,
      "no-useless-constructor": 0
    }
  }
}
